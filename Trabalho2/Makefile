CC = g++
CFLAGS = -Wall -g
RM = rm -rf

TARGET_MONT = montador
TARGET_CARREGADOR = carregador

all:$(TARGET_MONT) $(TARGET_CARREGADOR)

$(TARGET_MONT): $(TARGET_MONT).cpp 
	$(CC) $(CFLAGS) -o $(TARGET_MONT) $(TARGET_MONT).cpp
$(TARGET_CARREGADOR): $(TARGET_CARREGADOR).cpp
	$(CC) $(CFLAGS) -o $(TARGET_CARREGADOR) $(TARGET_CARREGADOR).cpp

